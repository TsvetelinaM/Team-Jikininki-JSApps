<h1>Edit item</h1>
<div class="edit-item-form">
    <div class="form-group">
        <label class="control-label col-sm-2" for="title">Title:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="edit-title" value="{{this._title}}">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="due-date">Due date:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="datepicker" value="{{this._dueDate}}">
        </div>
    </div>
    <button class="btn btn-success save-item">Save</button>
</div>